<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuerhuixue.mapper.InstrumentMapper">

    <select id="instrumentList" resultType="instrument">
        select * from tb_instrument
    </select>

    <select id="findInstrumentById" resultType="instrument">
        select * from tb_instrument where id=#{id}
    </select>

    <update id="instrumentModify" parameterType="instrument">
        update tb_instrument
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">
                name=#{name},
            </if>
            <if test="instype != null">
                instype_id=#{instype.id},
            </if>
            <if test="price != null">
                price=#{price},
            </if>
            <if test="stock != null">
                stock=#{stock},
            </if>
            <if test="picpath != null and picpath != ''">
                picpath=#{picpath},
            </if>
            <if test="brand != null and brand != ''">
                brand=#{brand},
            </if>
            <if test="description != null and description != ''">
                description=#{description}
            </if>
        </trim>
        where id=#{id}
    </update>

    <delete id="instrumentDelete">
        delete from tb_instrument where id=#{id}
    </delete>
</mapper>