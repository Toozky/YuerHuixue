<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuerhuixue.mapper.InstrumentMapper">

    <select id="instrumentList" resultType="instrument">
        select * from tb_instrument
    </select>

    <select id="findInstrumentById" resultType="instrument">
        select * from tb_instrument
        where id=#{id}
    </select>

    <update id="instrumentModify" parameterType="instrument">
        update tb_instrument
        set name=#{name}, instype_id=#{instype.id}, price=#{price}, stock=#{stock}, picpath=#{picpath}, brand=#{brand}, description=#{description}
        where id=#{id}
    </update>

    <delete id="instrumentDelete">
        delete from tb_instrument
        where id=#{id}
    </delete>
</mapper>